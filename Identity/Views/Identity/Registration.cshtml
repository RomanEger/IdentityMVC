@model Identity.ViewModels.UserViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post" class="text-center">
    <div class="mb-3">
        <label asp-for="Login">Логин</label><br/>
        <input class="form-control" type="text" asp-for="Login" name="Login"/>
        <div>
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Password">Пароль</label><br/>
        <input class="form-control w-100" type="password" asp-for="Password" name="Password"/>
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    
    <div class="mb-4">
        <label asp-for="ConfirmPassword">Подтвердите пароль</label><br/>
        <input class="form-control w-100" type="password" asp-for="ConfirmPassword" name="ConfirmPassword"/>
        <div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-primary mb-3" value="Зарегистрироваться"/>
    <div><a href="/login">Уже есть аккаунт? Войти</a></div>
</form>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>